    <script src="~/Content/assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/Content/assets/js/pages/be_ui_progress.min.js"></script>
    <script src="~/Content/assets/js/plugins/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="~/Content/assets/js/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Content/assets/js/plugins/jquery-validation/additional-methods.js"></script>
    <script src="~/Content/assets/js/plugins/pwstrength-bootstrap/pwstrength-bootstrap.min.js"></script>
    <script src="~/Content/assets/js/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/assets/js/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/Content/assets/js/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/Content/assets/js/plugins/masked-inputs/jquery.maskedinput.min.js"></script>
