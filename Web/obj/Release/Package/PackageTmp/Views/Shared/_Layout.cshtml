        <!-- END Main Container -->
        <footer id="page-footer">
            <div class="content py-3">
                <div class="row fs-sm">
                    <div class="col-sm-6 order-sm-1 py-1 text-center text-sm-start">
                        PT. Kalimantan Prima Persada &copy; <span data-toggle="year-copy"></span>
                        <br />
                        Performed by <i class="fab fa-google-plus-g"></i>
                    </div>
                </div>
            </div>
        </footer>
    </div>
