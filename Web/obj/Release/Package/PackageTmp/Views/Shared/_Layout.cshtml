<body>
    <input type="text" id="hd_nrp" value="@Session["Nrp"].ToString()" hidden />
    <input type="text" id="hd_site" value="@Session["Site"].ToString()" hidden />
    <input type="text" id="hd_positid" value="@Session["PositionID"].ToString()" hidden />
    <input type="text" id="hd_idroles" value="@Session["ID_Role"].ToString()" hidden />
    <input type="text" id="web_link" value="@Session["Web_Link"].ToString()" hidden />

    <div id="overlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>

    <div id="page-container" class="sidebar-dark side-scroll page-header-fixed main-content">

        <!-- Sidebar -->
