        <main id="main-container">
            <!-- Page Content -->
            <div class="content">
                <div class="col-lg-8">
                    <nav class="breadcrumb push">
                        <a class="breadcrumb-item piraww" style="display: flex; align-items: center; text-decoration: underline;">
                            <i class="nav-main-link-icon fa fa-home" style="margin-right: 5px;"></i> <!-- Ikonya -->
                            Home
                        </a>
                        <span class="breadcrumb-item active" id="alamat">Work Approval</span>
                    </nav>
                </div>
                @RenderBody()
            </div>
            <!-- END Page Content -->
