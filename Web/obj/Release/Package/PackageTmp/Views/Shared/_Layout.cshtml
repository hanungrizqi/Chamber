    <script src="@Html.Raw(ViewBag.JS)"></script>
    <script>
        var path = window.location.pathname;

        var labelText = "";
        if (path === "/Approval/Index") {
            labelText = "Work Approval";
            document.getElementById("approval-mobiles").classList.add('active');
        } else if (path === "/Home/Index") {
            labelText = "Dashboard";
            document.getElementById("dashboard-mobiles").classList.add('active');
        } else if (path === "/CfmManagement/Index") {
            labelText = "CFM Management";
            document.getElementById("cfm-mobiles").classList.add('active');
        } else if (path === "/EmpRecord/Index") {
            labelText = "Employee Record"
            document.getElementById("emprecord-mobiles").classList.add('active');
        } else if (path === "/Setting/Users") {
            labelText = "Setting User"
            document.getElementById("user-mobiles").classList.add('active');
        } else if (path === "/Setting/Menu") {
            labelText = "Setting Profile"
            document.getElementById("profile-mobiles").classList.add('active');
        } else if (path.startsWith("/Approval/Detail")) {
            labelText = "Detail Approval";
        } else if (path.startsWith("/EmpRecord/Detail_ERecord")) {
            labelText = "Detail Employee Record";
        }

        document.getElementById("alamat").textContent = labelText;
    </script>
