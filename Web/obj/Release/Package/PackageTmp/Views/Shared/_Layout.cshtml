                                    <span class="nav-main-link-name">Dashboard</span>
                                </a>
                            </li>
                            <li class="nav-main-item">
                                <a class="nav-main-link" href="/Approval/Index" id="approval-mobiles">
                                    <i class="nav-main-link-icon fa fa-flag"></i>
                                    <span class="nav-main-link-name">Work Approval</span>
                                </a>
                            </li>
                            <li class="nav-main-item">
                                <a class="nav-main-link" href="/CfmManagement/Index" id="cfm-mobiles">
                                    <i class="nav-main-link-icon fa fa-envelope"></i>
                                    <span class="nav-main-link-name">CFM Management</span>
                                </a>
                            </li>
                            <li class="nav-main-item">
                                <a class="nav-main-link nav-main-link-submenu" data-toggle="submenu" aria-haspopup="true" aria-expanded="false" href="#">
                                    <i class="nav-main-link-icon fa fa-grip-vertical"></i>
                                    <span class="nav-main-link-name">User Management</span>
                                </a>
                                <ul class="nav-main-submenu">
                                    <li class="nav-main-item">
                                        <a class="nav-main-link" href="/Setting/Users" id="user-mobiles">
                                            <span class="nav-main-link-name">User</span>
                                        </a>
                                    </li>
                                    <li class="nav-main-item">
                                        <a class="nav-main-link" href="/Setting/Menu" id="profile-mobiles">
                                            <span class="nav-main-link-name">Profile</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-main-item">
                                <a class="nav-main-link" href="/EmpRecord/Index" id="emprecord-mobiles">
                                    <i class="nav-main-link-icon fa fa-envelope"></i>
                                    <span class="nav-main-link-name">Employee Record</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END Side Main Navigation -->
                </div>
                <!-- END Sidebar Scrolling -->
            </div>
            <!-- Sidebar Content -->
        </nav>
        <!-- END Sidebar -->
        <!-- Header -->
        <header id="page-header">
            <!-- Header Content -->
            <div class="content-header">
                <div class="row g-0 align-items-center w-100">
                    @*default row = 4,6,2*@
                    <div class="col text-start">
                        <img src="~/Content/assets/media/photos/logo_dcfc.png" class="img-fluid" style="max-width:120px">
                    </div>
                    <div class="col-5 text-center">
                        @Html.Action("Menu", "Menu")
                        <button type="button" class="btn btn-sm btn-alt-secondary d-lg-none" data-toggle="layout" data-action="sidebar_toggle">
                            <i class="fa fa-fw fa-bars"></i>
                        </button>
                    </div>
                    <div class="col text-end">
                        <button type="button" class="btn btn-sm btn-alt-secondary" data-toggle="layout" id="page-header-notifications" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-bell"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-end p-0" aria-labelledby="page-header-notifications">
                            <div class="px-2 py-3 bg-body-light rounded-top">
                                <h5 class="h6 text-center mb-0">
                                    Notifications
                                </h5>
                            </div>
                            <ul class="nav-items my-2 fs-sm">
                                @if (Session["ID_Role"] != null)
                                {
                                    if (Session["ID_Role"].ToString() == "1")
                                    {
                                        <li>
                                            <a class="text-dark d-flex py-2" href="/Setting/Users">
                                                <div class="flex-shrink-0 me-2 ms-3">
                                                    <i class="fa fa-fw fa-check text-success"></i>
                                                </div>
                                                <div class="flex-grow-1 pe-2">
                                                    <p class="fw-medium mb-1">You’ve added @Session["LastaddUser"].ToString() account successfully!</p>
                                                    @*<div class="text-muted">@Session["LastaddUserDate"].ToString()</div>*@
                                                </div>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="text-dark d-flex py-2" href="/Approval/Index">
                                                <div class="flex-shrink-0 me-2 ms-3">
                                                    <i class="fa fa-fw fa-exclamation-triangle text-warning"></i>
                                                </div>
                                                <div class="flex-grow-1 pe-2">
                                                    <p class="fw-medium mb-1">@Session["Counted"].ToString() Approval from all site found. Check at Work Approval menu!</p>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                    else if (Session["ID_Role"].ToString() == "2")
                                    {
                                        <li>
                                            <a class="text-dark d-flex py-2" href="/Approval/Index">
                                                <div class="flex-shrink-0 me-2 ms-3">
                                                    <i class="fa fa-fw fa-exclamation-triangle text-warning"></i>
                                                </div>
                                                <div class="flex-grow-1 pe-2">
                                                    <p class="fw-medium mb-1">@Session["Counted"].ToString() Approval from all site found. Check at Work Approval menu!</p>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                    else if (Session["ID_Role"].ToString() == "4")
                                    {
                                        <li>
                                            <a class="text-dark d-flex py-2" href="/Approval/Index">
                                                <div class="flex-shrink-0 me-2 ms-3">
                                                    <i class="fa fa-fw fa-exclamation-triangle text-warning"></i>
                                                </div>
                                                <div class="flex-grow-1 pe-2">
                                                    <p class="fw-medium mb-1">@Session["Counted"].ToString() Approval from all site found. Check at Work Approval menu!</p>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <a class="text-dark d-flex py-2" href="javascript:void(0)">
                                                <div class="flex-shrink-0 me-2 ms-3">
                                                    <i class="fa fa-fw fa-exclamation-triangle text-warning"></i>
                                                </div>
                                                <div class="flex-grow-1 pe-2">
                                                    <p class="fw-medium mb-1">You don't have any notifications.</p>
                                                </div>
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                            <div class="p-2 bg-body-light rounded-bottom">
                                <a class="dropdown-item text-center mb-0" href="javascript:void(0)">
                                    <i class="fa fa-fw fa-flag opacity-50 me-1"></i> View All
                                </a>
                            </div>
                        </div>

                        <button type="button" class="btn btn-sm btn-alt-success ms-1" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="far fa-edit opacity-50"></i>
                            <span class="d-none d-sm-inline">@Session["Name"].ToString()</span>
                        </button>
                        <div class="dropdown-menu dropdown-menu-md dropdown-menu-end p-0" aria-labelledby="page-header-user-dropdown">
                            <div class="p-2">
                                <a class="dropdown-item d-flex align-items-center justify-content-between space-x-1" href="javascript:void(0)">
                                    <i class="fab fa-fw fa-jenkins opacity-70"></i>
                                    <span>&nbsp; @Session["Role"].ToString()</span>
                                </a>
                                @if (Session["ID_Role"] != null)
                                {
                                    if (Session["ID_Role"].ToString() != "1")
                                    {
                                        <a class="dropdown-item d-flex align-items-center justify-content-between space-x-1" href="javascript:void(0)">
                                            <i class="fa fa-fw fab fa-whmcs opacity-25"></i>
                                            <span>&nbsp; User Setting</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item d-flex align-items-center justify-content-between space-x-1" href="/Setting/Users">
                                            <i class="fa fa-fw fab fa-whmcs opacity-25"></i>
                                            <span>&nbsp; User Setting</span>
                                        </a>
                                    }
                                }
                                <a class="dropdown-item d-flex align-items-center justify-content-between space-x-1" href="/Login/logout">
                                    <i class="fa fa-fw fa-sign-out-alt opacity-25"></i>
                                    <span>&nbsp; Sign Out</span>
                                </a>
                            </div>
                        </div>
                        <!-- END Compose -->
                    </div>
                </div>
            </div>
            <!-- END Header Content -->
            <!-- Header Search -->
            <div id="page-header-search" class="overlay-header bg-body-extra-light">
                <div class="content-header">
                    <form class="w-100" action="db_social.html" method="POST">
                        <div class="input-group">
                            <!-- Close Search Section -->
                            <!-- Layout API, functionality initialized in Template._uiApiLayout() -->
                            <button type="button" class="btn btn-secondary" data-toggle="layout" data-action="header_search_off">
                                <i class="fa fa-fw fa-times"></i>
                            </button>
                            <!-- END Close Search Section -->
                            <input type="text" class="form-control" placeholder="Search or hit ESC.." id="page-header-search-input" name="page-header-search-input">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fa fa-fw fa-search"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- END Header Search -->
            <!-- Header Loader -->
            <div id="page-header-loader" class="overlay-header bg-primary">
                <div class="content-header">
                    <div class="w-100 text-center">
                        <i class="far fa-sun fa-spin text-white"></i>
                    </div>
                </div>
            </div>
            <!-- END Header Loader -->
        </header>
        <!-- END Header -->
