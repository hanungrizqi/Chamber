
@{
    ViewBag.Title = "CFM Management";
    ViewBag.JS = "/Scripts/Page/CfmManagement.js";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Chambers Management</h3>
<div class="col-12 mb-2">
    <span style="font-size: 10px;">Berikut detail data setiap chamber yang tersedia di <b>@Session["Site"].ToString()</b>.</span>
</div>

<div class="row mb-3">
    <div class="col">
        <button type="button" class="btn rounded-0 btn-secondary" data-bs-toggle="modal" data-bs-target="#modal-insert" style="font-size: 11px;">+ &nbsp;Create New Chamber</button>
        <label><input type="search" class="form-control form-control-sm" placeholder="Search" id="search" aria-controls="tbl_approval"></label>
    </div>
    <div class="col text-end">
        <span style="font-size: 10px;">@ViewBag.Count person need approval found &nbsp; &nbsp;</span>
        <i class="nav-main-link-icon fa fa-arrow-down-wide-short" style="font-size: 10px;"></i>
        <span style="font-size: 10px;">filter &nbsp; &nbsp;</span>
        <i class="nav-main-link-icon fa fa-download" style="font-size: 10px;"></i>
        <span style="font-size: 10px;">Download</span>
    </div>
</div>

<div class="col-sm-12 col-md-6">
    <div class="dropdown" style="position: absolute; top: 0; right: 0%;">
        <label style="font-size: 12px;">7 person need approval found</label>
        <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" style="font-size: 11px;">
            <i class="nav-main-link-icon fa fa-filter"></i> <span style="font-size: 12px;">filter</span>
        </button>
        <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Status</a>
            <a class="dropdown-item" href="#">Date</a>
        </div>
        <i class="nav-main-link-icon fa fa-download" style="font-size: 11px;"></i>
        <span style="font-size: 12px;">Download</span>
    </div>
</div>

<div class="block">
    <div class="block-content block-content-full">
        <table class="js-table-checkable table table-hover table-vcenter" style="background-color: white; border-radius: 10px;" id="tbl_cfmmngmnt">
            <thead>
                <tr>
                    <th class="text-center" style="width: 40px;">
                        <div class="form-check d-inline-block">
                            <input class="form-check-input" type="checkbox" value="" id="checkAll" name="checkAll">
                            <label class="form-check-label" for="checkAll"></label>
                        </div>
                    </th>
                    <th class="d-none d-sm-table-cell" style="width: 40%; font-size: 12px; color: gray">NAME</th>
                    <th class="d-none d-sm-table-cell" style="width: 20%; font-size: 12px; color: gray ">USER TODAY</th>
                    <th class="d-none d-sm-table-cell" style="width: 15%; font-size: 12px; color: gray ">LOCATION</th>
                    <th class="d-none d-sm-table-cell" style="width: 20%; font-size: 12px; color: gray ">LAST USED</th>
                    <th style="width: 20%; font-size: 12px; color: gray; align-items: center;">ACTION</th>
                </tr>
            </thead>
            <tbody style="font-size: 14px; font-weight: 500;">
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="modal-insert" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Create Chamber's</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <label class="form-label" for="txt_chamber">Chamber</label>
                        <input type="text" class="form-control" id="txt_chamber" name="txt_chamber">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_loc">Location</label>
                        <input type="email" class="form-control" id="txt_loc" name="txt_loc">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn rounded-0 btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="Create()">
                        Create
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modal_update" tabindex="-1" aria-labelledby="modal-normal" aria-modal="true" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="block shadow-none mb-0">
                <div class="block-header block-header-default">
                    <h3 class="block-title">Edit Chamber</h3>
                    <div class="block-options">
                        <button type="button" class="btn-block-option" data-bs-dismiss="modal" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="block-content fs-sm">
                    <div class="mb-4">
                        <input type="text" name="txt_id" id="txt_id" hidden />
                        <label class="form-label" for="txt_chamber_update">Chamber</label>
                        <input type="text" class="form-control" id="txt_chamber_update" name="txt_chamber_update">
                    </div>
                    <div class="mb-4">
                        <label class="form-label" for="txt_loc_update">Location</label>
                        <input type="email" class="form-control" id="txt_loc_update" name="txt_loc_update">
                    </div>
                </div>
                <div class="block-content block-content-full block-content-sm text-end border-top">
                    <button type="button" class="btn rounded-0 btn-alt-secondary" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="Update()">
                        Update
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>